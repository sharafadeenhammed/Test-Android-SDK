<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="30dp"
    android:background="@drawable/gradient_wall_paper"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginVertical="100dp"
        android:text="Welcome to Kilo to Pound Converter App"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        />

    <EditText
        android:id="@+id/weightInKilo"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:hint="enter weight in kilo"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:inputType="numberDecimal"
        android:textColorHint="#D9D4D4" />

    <Button
        android:id="@+id/myButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:background="@color/teal_700"
        android:text="Convert"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/weightInPounds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        />

</LinearLayout>